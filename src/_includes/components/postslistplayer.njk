<section class="mt-12">
  <div class="relative pb-20 lg:pb-28">
    <div class="relative mx-auto max-w-7xl">
      <div class="grid gap-8 mx-auto mt-12 md:grid-cols-2 xl:grid-cols-3 lg:max-w-none">
        
        {% for post in collections.post | reverse %}
          <div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
            <div class="flex-shrink-0">
                  <iframe src="https://open.spotify.com/embed/episode/{{ post.data.url }}?theme=0" width="100%" height="232" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>